<%= render 'compose_with_btn' %>

<div>
  <div class="col-sm-10">
    <h4>From: <%=link_to @conversation.originator.name,
      @conversation.originator%></h3>
    <h4>To: <%=link_to @conversation.recipients[0].name,
      @conversation.recipients[0]%></h3>
    <h4>Subject: <%=@conversation.messages.last.subject%></h4>
    <!-- Do not indent; extra white space will show -->
    <textarea type="message" class="form-control" readonly="true"
      id="msg_body" rows="5">
<%=@conversation.messages.last.body%>
    </textarea>
    <button type="submit" class="btn btn-large btn-primary pull-right" 
      onClick="reply()">
    Reply</button>
  <%= link_to("Back", conversations_path, 
    :class => "btn btn-large pull-right") %>
  </div>
</div>

<script type="text/javascript">
  function reply(){
    $("#msg_recipient").val("<%=@conversation.originator.name%>");
    $("#msg_subject").val("RE: <%=@conversation.subject%>");
    $("#compose").modal();
    console.log("should have created a modal dialog.");
  }
</script>
