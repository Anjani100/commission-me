<!DOCTYPE html>
<html>
  <head>
    <% @title = "Authenticate User" %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS and JS are linked in views/layouts/application.html.erb -->
  </head>
  <body>
    <div class="container">
      <div class="signuplogin">

        <%=form_tag({controller:"users", action:"create"}, method: "post", id:"sign_up",
            class: "form_signin col-md-3") do %>
          <h2 class="form-signin-heading">Sign Up</h2>
          <input type="text" name="name" class="input-block-level" placeholder="Name">
          <input type="text" name="email" class="input-block-level" placeholder="Email">
          <input type="password" name="password" class="input-block-level"
            placeholder="Password">
          <input type="password" name="password_confirmation" class="input-block-level"
            placeholder="Reenter Password">
          </br>
          <button class="btn" type="submit">Sign Up</button>
        <%end%>
      
        <%=form_tag(users_login_path, method: "post", id:"log_in", class: "form_signin col-md-3") do %>
          <h2 class="form-signin-heading">Log In</h2>
          <input type="text" name="email" class="input-block-level" placeholder="Email">
          <input type="password" name="password" class="input-block-level" placeholder="Password">
          <label class="checkbox">
            <input type="checkbox" name="remember_me" value="true"> Remember Me</input>
          </label>
          <%=submit_tag("Log in", class:"btn")%>
        <%end%>

      </div>
    </div>
  </body>
</html>
