          <div class="span9">
            <h2><%=@user.name%></h2>
            <!-- <h5>user's bio/info</h5> -->
            <p><span class="badge badge-important">
              <%=@user.received_commissions.count%>
                <!-- Make sure that the singular / plural grammar is 
                     correct -->
                <% if @user.received_commissions.count == 1 %>
                  </span> Commission</p>
                <% else %>
                  </span> Commissions</p>
                <% end %>
            <p>Joined <%=@user.created_at.strftime("%B %Y")%></p>
            <!-- Proper buttons/links displayed based on who is logged in -->
            <% if @user.name != current_user.name %>
              <%=link_to "CommissionMe Â»", 
                new_commission_path(:artist_id => @user.id), 
                :class => "btn btn-primary" %>
              <!-- TODO: Do the same with a messaging link -->
            <% end %>
