<% provide(:title, "Edit Settings") %>

<div class="container">
  <div class="row">
    <div class="col-md-7">
      <h2>Update Settings</h2>
      <%=form_for @user do |f| %>
      <div class="form-group">
        <%=f.label :email, class: "col-md-3"%>
        <%=f.text_field :email, class: "col-sm-offset-3 col-md-4"%>
      </div>
      <div class="form-group">
        <%=f.label :password, class: "col-md-3"%>
        <%=f.password_field :password, class: "col-sm-offset-3 col-md-4"%>
      </div>
      <div class="form-group">
        <%=f.label :password_confirmation, "Password Confirmation", 
          class: "col-md-3"%>
          <%=f.password_field :password_confirmation, 
            class: "col-sm-offset-3 col-md-4"%>
      </div>

      <div class="form-group">
        <%= f.submit "Save Changes", 
          class: "btn btn-medium btn-primary col-sm-offset-3" %>
      </div>
      <%end%>
    </div>
  </div>
</div>
