<% provide(:title, "About CommissionMe") %>

<div class="parallaxcontainer">
<!-- CSS Code -->
<link rel="stylesheet" href="assets/parallaxstyles.css">
<link rel="stylesheet" href="assets/reset.css">
<link rel="stylesheet" type="text/css" href="/assets/slideshowstyles.css" />
<!-- JS Code -->
<script src="assets/jquery-1.7.2.min.js"></script>
<script src="parallax.js"></script>

<!-- Slideshow Code -->
<link rel="stylesheet" href="assets/slideshow.css" type="text/css" />
<script src="assets/jquery-1.7.2.min.js"></script>
