<!DOCTYPE html>
<html>
<head>
  <title><%= render_title %></title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-default">
    <div class="header navbar-inner">
      <div class="container">
        <div class="navbar">
          <div class="navbar-inner">
            <a class="brand" href="/">CommissionMe</a>
            <ul class="nav pull-right">
              <li>
                <%if current_user %>
                  <%= link_to "Log Out", users_logout_path, method:"post", class:"brand"%>
                <% else %>
                  <a href="/authenticate.html">Sign up/Log in</a>
                <% end %>
              </li>

              <%if current_user %>
                <li>
                  <%= link_to "Settings", edit_user_path(:id => current_user.id)%>
                </li>
                <li>
                  <%= link_to current_user.name, current_user%>
                </li>
              <%end%>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <hr>
  <% flash.each do |key, value| %>
    <div class="flash <%= key%>"><%= value%></div>
  <% end %>
  <%= yield %>
  
  <!-- Render the partial template for the common footer -->
  <%= render "layouts/footer" %>
</body>
</html>
